    <changeSet id="add_target_uuid_to_fhir_reference_202020917" author="ibacher" dbms="mysql,mariadb,postgresql">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="fhir_reference"/>
            <not>
                <columnExists tableName="fhir_reference" columnName="target_uuid"/>
            </not>
        </preConditions>
        <addColumn tableName="fhir_reference">
            <column name="target_uuid" type="char(32)">
                <constraints unique="true"/>
            </column>
        </addColumn>
        <sql>
            update fhir_reference
            set target_uuid = substring(reference from position('/' in reference) + 1)
        </sql>
    </changeSet>
    
